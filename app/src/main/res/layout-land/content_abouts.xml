<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.mujahid.electronify.about"
    android:orientation="vertical"
    android:weightSum="1">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="wrap_content"
    android:background="#3C3A36">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp" />

    <android.support.v7.widget.CardView

        android:id="@+id/card_view1"
        android:layout_margin="16dp"
        card_view:cardCornerRadius = "5dp"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Electronify"
                android:id="@+id/first"
                android:layout_marginTop="-2dp"
                android:textSize="25sp"
                android:layout_marginLeft="230dp"
                android:textStyle="bold"
                android:textColor="#ff0090" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView

        android:id="@+id/card_view2"
        android:layout_margin="16dp"
        card_view:cardCornerRadius = "5dp"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"

            android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed and Designed By:\n     Mujahid Khan(SPI)"
            android:textSize="18sp"
            android:textColor="#05c89e"
            android:layout_marginBottom="5dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="110dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Me:"
                    android:layout_gravity="left|center"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/facebook"
                    android:id="@+id/imageView3"
                    android:onClick="facebook"
                    android:layout_marginLeft="5dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/gmail"
                    android:onClick="Email"
                    android:id="@+id/imageView4"
                    android:layout_marginLeft="5dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:src="@drawable/twitter"
                    android:layout_height="40dp"
                    android:id="@+id/imageView5"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:id="@+id/card_view3"
        android:layout_margin="16dp"
        card_view:cardCornerRadius = "5dp"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
       >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="#1 Application for Electronify\n\nNo need to book for Electronics.\nThis app enables you to carry basic Tutorial of Electronics in your pocket.It contains all the basic things to make your start.This app has a very simple user interface and the contents can be easily understood by the user.This will definitely help u for preparing for interviews, test and in many more ways. All the content are form Electronics and Communication Engg. dept. Students of Trivuvan University, Nepal.\n\nAl the best...."
                android:id="@+id/second"
                android:layout_marginTop="-2dp"
                android:textSize="18sp"
                android:textColor="#020202"
                android:layout_gravity="top|left" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView

        android:id="@+id/card_view6"
        android:layout_margin="16dp"
        card_view:cardCornerRadius = "5dp"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="140dp"
            android:orientation="vertical"
          >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Resource Help: Electronify.org"
                android:id="@+id/res"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_marginStart="20dp"

                android:textColor="#25d4a5" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
</ScrollView>

</LinearLayout>